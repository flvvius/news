{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"],
			"outputs": ["dist/**"],
			"env": [
				"VITE_CONVEX_URL",
				"VITE_CONVEX_SITE_URL",
				"EXPO_PUBLIC_CONVEX_SITE_URL",
				"CONVEX_URL",
				"CONVEX_DEPLOYMENT",
				"BETTER_AUTH_SECRET",
				"SITE_URL",
				"NATIVE_APP_URL"
			]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"check-types": {
			"dependsOn": ["^check-types"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:setup": {
			"cache": false,
			"persistent": true
		}
	}
}
